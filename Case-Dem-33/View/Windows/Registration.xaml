<Window x:Class="Case_Dem_33.View.Windows.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Case_Dem_33.View.Windows"
        mc:Ignorable="d"
        Title="Registration" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <!--Левая часть окна-->
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="6*"/>
                    <ColumnDefinition Width="0.5*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1.5*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <!--Элементы для правой части-->
                <TextBlock Text="Регистрация" FontSize="36"
            Grid.Column="1" Grid.Row="1"/>

                <TextBlock Text="Логин" FontSize="24"
            Grid.Column="1" Grid.Row="2"/>

                <TextBox x:Name="usernameTb" Grid.Column="1" Grid.Row="3"/>

                <TextBlock Text="Пароль" FontSize="24"
            Grid.Column="1" Grid.Row="4"/>

                <PasswordBox x:Name="passwordPb" Grid.Column="1" Grid.Row="5"/>

                <Button x:Name="Reg" Content="Зарегистрироваться" Background="#3c3c3c" Foreground="White" FontSize="16"
            Grid.Column="1" Grid.Row="7" Click="Reg_Click"/>
            </Grid>
            <!--Правая часть окна-->
            <Grid Background="#3c3c3c">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="0.5*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1.5*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <!--Элементы для левой части-->
                <TextBlock Text="Есть аккаунт?" 
                   Foreground="White" FontSize="36"
                   Grid.Column="1" Grid.Row="1"/>

                <TextBlock Text="Тест" Foreground="White" FontSize="16"
                   Grid.Column="1" Grid.Row="3"/>

                <Button Content="Войти" 
                Background="Transparent" BorderBrush="White"
                Foreground="White"
                FontSize="16"
                Grid.Column="1" Grid.Row="5" Click="Button_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
